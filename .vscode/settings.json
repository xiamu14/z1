{
  "editor.tabSize": 2,
  "editor.indentSize": 2,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "tailwindCSS.experimental.classRegex": [
    [
      "([\"'`][^\"'`]*.*?[\"'`])",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ]
  ],
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    ".*ClassName"
  ],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "public": true,
    ".vscode": true,
    ".next": true,
    "node_modules": true,
    "next-env.d.ts": true
  },
  "hide-files.files": [
    "public",
    ".vscode",
    ".next",
    "node_modules",
    "next-env.d.ts"
  ],
  "cSpell.words": [
    "Contentlayer",
    "remixicon",
    "shikijs"
  ]
}